<main>
    <form onSubmit="alert('submit!');return false" class="change-password">
        <div class="profile-setting-avatar">
            <img class="profile-settings-avatar-ico" alt="avatarIco" src="{{avatarIco}}">
        </div>
        <div class="change-password-name">{{display_name}}</div>
        <div class="change-password-data">
            <label for="oldPassword" class="change-password-data-header">{{oldPassword}}</label>
            <input name="oldPassword" class="change-password-data-profile" placeholder="введите старый пароль">
        </div>
        <div class="change-password-data">
            <label for="newPassword" class="change-password-data-header">{{newPassword}}</label>
            <input name="newPassword" class="change-password-data-profile" placeholder="введите новый пароль">
        </div>
        <div class="change-password-data">
            <label for="newPassword" class="change-password-data-header">{{newPasswordRepeat}}</label>
            <input name="newPassword" class="change-password-data-profile" placeholder="введите новый пароль">
        </div>
        <button class="profile-setting-btn" data-destination="/chat">{{save}}</button>
    </form>
</main>
